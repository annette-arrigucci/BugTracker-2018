@model IEnumerable<BugTracker.Models.AdminUserViewModel>
@{
    ViewBag.Title = "Index";
}
<h2>Role Assignments</h2>
<br />
<table class="table table-striped table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserEmail)
        </th>
        <th>
            @Html.DisplayName("Current Roles")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserEmail)
            </td>
            <td>
                @if (item.CurrentRoles == null || item.CurrentRoles.Count == 0 )
                {
                    @Html.Raw("None assigned")
                }
                else
                {
                    foreach (var role in item.CurrentRoles)
                    {
                        @Html.Raw(role)
                        @Html.Raw("<br>")
                    }
                }
            </td>
            <td>
                @Html.ActionLink("Edit Roles", "Edit", new { id = item.UserId })               
            </td>
        </tr>
    }

</table>

