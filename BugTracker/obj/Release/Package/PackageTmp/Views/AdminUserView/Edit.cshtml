@model BugTracker.Models.AdminUserViewModel

<link href="~/Content/edit-roles.css" rel="stylesheet">

@{
    ViewBag.Title = "Edit Roles";
}

<h2>Edit Roles</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.UserId, new { htmlAttributes = new { @class = "form-control" } })

    <div class="form-horizontal">
        <hr />
        <div class="form-group">
            @Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayFor(model => model.UserName, new { htmlAttributes = new { @class = "control-label form-control" } })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.UserEmail, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayFor(model => model.UserEmail, new { htmlAttributes = new { @class = "control-label form-control" } })
            </div>
        </div>
        @*using a checkbox list to set user roles*@
        <div class="form-group">
            @Html.LabelFor(model => model.RolesToSelect, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @for (int i = 0; i < Model.RolesToSelect.Length; i++)
                {
                    <p>                  
                     @Html.CheckBoxFor(m => Model.RolesToSelect[i].Checked)
                     @Html.HiddenFor(m => Model.RolesToSelect[i].RoleName)
                     @Html.DisplayFor(m => Model.RolesToSelect[i].RoleName)              
                   </p>
                }
            </div>          
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

        <div>
            @Html.ActionLink("Back to Role Assignments", "Index")
        </div>
